<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEAL DB API REQUEST"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/primary"
       />

    <Button
        android:id="@+id/btnrequest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/inverse"
        android:onClick="button_event"
        android:padding="10dp"
        android:text="Random Meal"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnrequest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/inverse"
        android:onClick="button_event"
        android:padding="10dp"
        android:text="Search by name"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnrequest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/inverse"
        android:onClick="button_event"
        android:padding="10dp"
        android:text="Search by category"
        android:textColor="@color/white" />

</LinearLayout>